{{> homeNavbar}}

<div class="card m-3">
    <div class="card-header text-white bg-primary" id="post-card" data-postId="{{post.id}}">
        {{post.title}}
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{post.content}}</p>
          
        </blockquote>
    </div>
</div>
<section class="m-3">
    <h4>Comments</h4>
    {{#if post.Comments}}
        {{#each post.Comments as |comment|}}
            <div class="card m-3">
                <p>{{comment.content}}</p>
               
                    <footer> - {{comment.user.username}} Created: {{comment.createdAt}} </p>
                    </footer>
            </div>
        {{/each}}
    {{/if}}
</section>

{{#if logged_in}}
<form class="m-3">
    <div class="form-group">
        <label for="content">Comment</label>
        <textarea class="form-control" id="content" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-info" id="new-comment-submit">âž• New Comment</button>
</form>
{{/if}}

<script src="/js/newComment.js"></script>